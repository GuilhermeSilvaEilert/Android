<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMusicasApp">

    <ListView
        android:id="@+id/ApresentaMusicas"
        android:layout_width="410dp"
        android:layout_height="574dp"
        android:onClick="Reproduzir"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp">

    </ListView>

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="155dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="576dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="deletaMusica"
            android:text="Deletar Musicas" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="AtualizaMusica"
            android:text="Atualizar Nome da Musica" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="AddMusica"
            android:text="Adiconar Novas Musicas" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>